package com.linn.blog.service;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;
import com.linn.blog.entity.system.Result;
import com.linn.blog.utils.JDBCUtils;

/**
 * 文章分类service
 * @author Administrator
 *
 */
public class CategoryServiceImpl {

	/**
	 * 删除分类
	 * @param categoryId
	 * @throws Exception
	 */
	private int delCategory(String categoryId) throws Exception{

		String sql = "delete from t_category where id = ?;";  
		
		Connection conn = JDBCUtils.getMysqlConn();
		PreparedStatement ps = conn.prepareStatement(sql);
		
		ps.setObject(1, categoryId);
		int count = ps.executeUpdate();

		JDBCUtils.close(ps, conn);
		return count;
		
	}
}
